rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Permite lectura/escritura solo a usuarios autenticados
    match /companies/{companyId} {
      allow read, write: if request.auth != null && request.auth.uid == companyId;
    }
    
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    match /scans/{scanId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.companyId;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.companyId;
    }
    
    // Regla temporal para desarrollo - permite todo
    match /{document=**} {
      allow read, write: if true;
    }
  }
}