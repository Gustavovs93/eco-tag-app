rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // USUARIOS: Solo pueden gestionar su propio documento
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // EMPRESAS: Solo pueden gestionar su propia empresa
    match /companies/{companyId} {
      allow read, write: if request.auth != null && request.auth.uid == companyId;
    }
    
    // ESCANEOS: Crear y leer solo los propios
    match /scans/{scanId} {
      allow read: if request.auth != null && request.auth.uid == resource.data.companyId;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.companyId;
      allow update, delete: if false; // No permitir modificaciones o eliminaciones
    }
    
    // PRODUCTOS: Crear y leer solo los propios  
    match /products/{productId} {
      allow read: if request.auth != null && request.auth.uid == resource.data.companyId;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.companyId;
      allow update, delete: if false;
    }
    
    // CONFIGURACIÓN: Solo lectura pública
    match /config/{document} {
      allow read: if true;
      allow write: if false;
    }
  }
}